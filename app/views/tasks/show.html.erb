<h2><%= @task.title %></h2>
<p><%= link_to "Edit this task", edit_task_path() %></p>

<p><%= @task.details %></p>

<input class="form-check-input" type="checkbox" <%= @task.completed ? "checked" : " "%> aria-label="...">
<span id="completion_status_text"><%= @task.completed ? "This task is completed" : "This task is not completed" %></span>


<div class="end-link">
  <i class="fa-solid fa-rotate-left"></i>
  <%= link_to "Back to list", tasks_path %>
</div>
