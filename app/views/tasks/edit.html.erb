<h1>Edit task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %> Completed
  <%= f.submit %>
<% end %>

<div class="end-link">
  <i class="fa-solid fa-rotate-left"></i>
  <%= link_to "Back to list", tasks_path %>
</div>
