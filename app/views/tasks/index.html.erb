<h1>My tasks</h1>

<ul style="list-style-type: none;">
  <% @tasks.each do |task| %>
    <li class="form-check">
      <input class="form-check-input" type="checkbox" <%= task.completed ? "checked" : " "%> aria-label="...">
      <label class="form-check-label" for=<%= "flexCheckDefault#{task.id}" %>>

        <%= link_to task.title, task_path(task) %> â€¢

        <%= link_to destroy_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>

      </label>
    </li>
  <% end %>
</ul>

<i class="fa-solid fa-plus"></i>
<%= link_to "New task", new_task_path  %>
